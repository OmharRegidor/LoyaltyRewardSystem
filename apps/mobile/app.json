{
  "expo": {
    "name": "NoxaLoyalty",
    "slug": "loyaltyhub",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "newArchEnabled": true,
    "orientation": "portrait",
    "icon": "./assets/images/logoloyalty.png",
    "scheme": "NoxaLoyalty",
    "platforms": [
      "ios",
      "android"
    ],
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logoloyalty.png",
      "resizeMode": "contain",
      "backgroundColor": "#edeef0"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.NoxaLoyalty.app",
      "newArchEnabled": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.NoxaLoyalty.app",
      "newArchEnabled": true,
      "adaptiveIcon": {
        "backgroundColor": "#edeef0",
        "foregroundImage": "./assets/images/adaptive-icon(1).png"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "NoxaLoyalty",
              "host": "auth",
              "pathPrefix": "/callback"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      "@react-native-google-signin/google-signin"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "be2191a5-1512-4284-a3a5-25820121673a"
      }
    }
  }
}
